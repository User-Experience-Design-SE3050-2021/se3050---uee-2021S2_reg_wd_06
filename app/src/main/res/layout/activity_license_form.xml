<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Registration">

    <TextView
        android:id="@+id/regitext1"
        android:layout_width="306dp"
        android:layout_height="28dp"
        android:text="Fill Your Details and Register For"
        android:textColor="#1976D2"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/regitext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Driving License Medical Test"
        android:textColor="#1976D2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="107dp"
        android:layout_height="17dp"
        android:layout_marginBottom="368dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/ic_baseline_star_24"
        android:text="Patient name"
        android:textColor="#039BE5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/IDtxt"
        android:layout_width="89dp"
        android:layout_height="19dp"
        android:layout_marginBottom="312dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/ic_baseline_star_24"
        android:text="National ID"
        android:textColor="#039BE5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/AreaTxt"
        android:layout_width="70dp"
        android:layout_height="16dp"
        android:layout_marginBottom="252dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/ic_baseline_star_24"
        android:text="Area"
        android:textColor="#039BE5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"

        />


    <TextView
        android:id="@+id/emailtxt"
        android:layout_width="47dp"
        android:layout_height="19dp"
        android:layout_marginBottom="128dp"
        android:background="#FDFBFB"
        android:drawableRight="@drawable/ic_baseline_star_24"
        android:text="Email"
        android:textColor="#039BE5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/mobiletxt2"
        android:layout_width="143dp"
        android:layout_height="22dp"
        android:layout_marginBottom="192dp"
        android:background="#FDFBFB"
        android:drawableRight="@drawable/ic_baseline_star_24"
        android:text="Mobile Number"
        android:textColor="#039BE5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"

        />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="307dp"
        android:layout_height="31dp"
        android:layout_marginBottom="332dp"
        android:background="@drawable/edittextround"

        android:drawableRight="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="     Enter Patient Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edittextID"
        android:layout_width="301dp"
        android:layout_height="38dp"
        android:layout_marginBottom="272dp"
        android:background="@drawable/edittextround"

        android:drawableRight="@drawable/ic_baseline_card_travel_24"
        android:ems="10"
        android:hint="     Enter National ID"
        android:inputType="textPersonName"
        android:textColor="#8E8585"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edittextaddress"
        android:layout_width="301dp"
        android:layout_height="37dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/edittextround"
        android:drawableRight="@drawable/ic_baseline_location_on_24"
        android:ems="10"
        android:hint="     Enter your closest city"
        android:inputType="textPersonName"
        android:textColor="#4A4646"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edittextmobile"
        android:layout_width="283dp"
        android:layout_height="36dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/edittextround"

        android:drawableRight="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:hint="     Enter Email"
        android:inputType="textPersonName"
        android:textColor="#8E8585"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edittextmobile2"
        android:layout_width="297dp"
        android:layout_height="37dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/edittextround"

        android:drawableRight="@drawable/ic_baseline_perm_phone_msg_24"
        android:ems="10"
        android:hint="     Enter Mobile Number"
        android:inputType="textPersonName"
        android:textColor="#8E8585"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LicenseRegister"
        android:layout_width="108dp"
        android:layout_height="34dp"

        android:background="@drawable/button"
        android:text="REGISTER"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#F5F5F5"
        android:textColorLink="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittextmobile"
        app:layout_constraintVertical_bias="0.189" />


</androidx.constraintlayout.widget.ConstraintLayout>