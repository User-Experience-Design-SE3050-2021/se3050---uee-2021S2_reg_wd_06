<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/background">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="268dp"
        android:layout_height="39dp"
        android:text="Driving License Medical"
        android:textColor="#079DE1"
        android:textColorHint="#229ED6"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.014" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="325dp"
        android:layout_height="127dp"
        android:backgroundTint="#2F80ED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="National Transport Medical Institute(Medical for Driving License)"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="63dp"
            android:background="#FFFFFF"
            android:text="Client from Isolated area or quarantined people are not allowed. Allocations can be done to relavant NTMI branch at NIC address"
            android:textColor="#FB0C0C" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="318dp"
        android:layout_height="111dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533">

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#5AE6F8" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:text="10.10.2021"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:text="8.00 AM"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:text="Monday"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:text="Active Person -1"
            android:textColor="#090909" />

        <Button
            android:id="@+id/available"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/availablebtn"
            android:text="Available" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="168dp"
        android:layout_height="24dp"
        android:drawableStart="@drawable/ic_baseline_arrow_forward_24"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_24"
        android:text="Pick Date and Time"
        android:textColor="#050505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="322dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.853">

        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="#5AE6F8" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:text="10.10.2021"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:text="8.00 AM"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:text="Monday"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:text="Active Person -10"
            android:textColor="#090909" />

        <Button
            android:id="@+id/full"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/fullbtn"
            android:text="Full" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>