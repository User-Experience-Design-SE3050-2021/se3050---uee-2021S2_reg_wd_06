<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contactUs.ContactUsFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif-medium"
        android:text="Contact Us"
        android:textColor="@color/thisAppBlack"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/emailBtn"
        android:layout_width="253dp"
        android:layout_height="117dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:foregroundTint="#08776C"
        android:text="Email"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callBtn" />

    <Button
        android:id="@+id/callBtn"
        android:layout_width="253dp"
        android:layout_height="117dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#E83535"
        android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
        android:text="Call"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webBtn" />

    <Button
        android:id="@+id/webBtn"
        android:layout_width="253dp"
        android:layout_height="117dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#2196F3"
        android:drawableLeft="@drawable/ic_baseline_personal_video_24"
        android:text="Web"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />
</androidx.constraintlayout.widget.ConstraintLayout>